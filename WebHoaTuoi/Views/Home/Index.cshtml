            <div class="stat-label">Sản Phẩm Đa Dạng</div>
        </div>

        <div class="stat-item">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Hỗ Trợ Khách Hàng</div>
        </div>

        <div class="stat-item">
            <div class="stat-number">100%</div>
            <div class="stat-label">Cam Kết Chất Lượng</div>
        </div>
    </div>
</div>